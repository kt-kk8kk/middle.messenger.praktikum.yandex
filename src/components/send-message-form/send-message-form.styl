.send-message
    &__form
        display flex
        align-items center
        gap 0 10px
    &__form-clip
        position relative
        width 32px
        flex-shrink 0
        flex-grow 0
        display flex
        align-items center
        justify-content center
        .material-symbols-outlined
            font-size 3.2rem
            transform rotate(45deg)
            color var(--text-secondary-color)
    &__form-input
        flex-grow 1
        height 32px
        border none
        border-radius 30px
        background var(--form-ele-bg)
        padding 0 20px
        font 500 1.2rem/100% var(--inter-font)
        color var(--text-color)
    &__form-button
        width 28px
        height 28px
        border none
        border-radius 50%
        background var(--form-ele-color)
        color var(--btn-color)
        display flex
        align-items center
        justify-content center
        .material-symbols-outlined
            font-size 1.8rem
