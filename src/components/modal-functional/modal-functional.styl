.modal-functional
    &__wrap
        background var(--box-bg)
        box-shadow 0 0 6px rgba(0,0,0,.14)
        border-radius 12px
        position absolute
        top calc(100% + 25px)
        right -10px
        padding 8px
        z-index 8001
        &-ontop
            top auto
            right auto
            bottom 54px
            left -10px
