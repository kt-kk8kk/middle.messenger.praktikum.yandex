.box-form
    &__main
        height 100%
    width 340px
    background var(--box-bg)
    box-shadow 0 0 6px var(--box-shadow)
    border-radius 12px
    padding 50px 30px 30px
    &__wrap
        min-height 100%
        padding 20px 0
        display flex
        align-items center
        justify-content center
    &__head
        font-size 2rem
        line-height 100%
        font-weight 500
        margin 0 0 40px
        text-align center
