.chat-wrapper
    &__empty
        width 100%
        height 100%
        display flex
        align-items center
        justify-content center
        &-message
            font-size 1.2rem
            line-height 100%
            color var(--text-secondary-color)

.chat
    &__wrapper
        width 100%
        height 100%
        display flex
        align-items stretch
        flex-direction column

    &__header
        width 100%
        height 55px
        padding 0 20px
        flex-shrink 0
        flex-grow 0
        &-inner
            padding 10px 0
            border-bottom 1px solid var(--layout-border)
            display flex
            align-items center
            justify-content space-between
        &-user
            display flex
            align-items center
            gap 0 10px
        &-avatar
            width 34px
            height 34px
            border-radius 50%
            background var(--form-ele-bg)
            img
                display block
                width 100%
                height 100%
                border-radius 50%
                object-fit cover
        &-name
            font-size 1.3rem
            line-height 100%
            font-weight 600

    &__body
        height calc(100% - 110px)
        overflow auto
        scrollbar-color var(--scrollbar-color)
        scrollbar-width thin

    &__footer
        margin-top auto
        width 100%
        height 55px
        padding 0 20px
        flex-shrink 0
        flex-grow 0
        &-inner
            padding 10px 0
            border-top 1px solid var(--layout-border)

.cols-layout
    &__wrap
        height 100%
        display flex
        align-items stretch
        justify-content flex-start
    &__aside
        width 310px
        background var(--left-col-bg)
        flex-shrink 0
        display flex
        flex-direction column
        &-head
            padding 21px 10px 14px
            flex-grow 0
            flex-shrink 0
        &-profile
            padding 0 0 23px
            text-align right
            font-size 1.2rem
            line-height 100%
            &-link
                display inline-flex
                align-items center
                color var(--text-secondary-color)
                .material-symbols-outlined
                    font-size 1.6rem
        &-body
            flex-grow 1
            overflow auto
            scrollbar-color var(--scrollbar-color)
            scrollbar-width thin
    &__content
        border-left 1px solid var(--layout-border)
        width calc(100% - 310px)
        background var(--box-bg)
