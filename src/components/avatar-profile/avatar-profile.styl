.avatar-profile
    width 130px
    height 130px
    border-radius 50%
    background url("data:image/png;base64,") 50% 50% no-repeat var(--form-ele-bg)
    background-size 40px 40px
    margin 0 auto 20px
    position relative
    cursor pointer
    &:hover
        .avatar-profile__change
            opacity 1
    &__img
        display block
        width 100%
        height 100%
        object-fit cover
        border-radius 50%
    &__change
        display flex
        align-items center
        justify-content center
        width 100%
        height 100%
        padding 10px
        border-radius 50%
        background var(--avatar-hover-bg)
        position absolute
        top 0
        left 0
        font-size 1.3rem
        line-height 1.4rem
        text-align center
        color var(--btn-color)
        opacity 0
        transition all .175s
