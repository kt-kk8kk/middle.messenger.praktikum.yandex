.cols-layout
    &__aside
        width 310px
        background var(--left-col-bg)
        flex-shrink 0
        display flex
        flex-direction column
        &-head
            padding 21px 10px 14px
            flex-grow 0
            flex-shrink 0
        &-profile
            padding 0 0 23px
            text-align right
            font-size 1.2rem
            line-height 100%
            &-link
                display inline-flex
                align-items center
                color var(--text-secondary-color)
                .material-symbols-outlined
                    font-size 1.6rem
        &-body
            flex-grow 1
            overflow auto
            scrollbar-color var(--scrollbar-color)
            scrollbar-width thin
