.box-form
    &__main
        height 100%
    width 340px
    background var(--box-bg)
    box-shadow 0 0 6px var(--box-shadow)
    border-radius 12px
    padding 50px 30px 30px
    &__wrap
        min-height 100%
        padding 20px 0
        display flex
        align-items center
        justify-content center
    &__head
        font-size 2rem
        line-height 100%
        font-weight 500
        margin 0 0 40px
        text-align center
    &__fieldset
        margin 16px 0 0
    &__input-wrapper
        display block
        position relative
    &__input-label
        position absolute
        bottom 7px
        left 0
        font-size 1.3rem
        line-height 1.3rem
        color var(--text-secondary-color)
        transition all .175s
    &__input
        display block
        border none
        border-bottom 1px solid var(--form-ele-color)
        background transparent
        width 100%
        height 37px
        padding 5px 0 0
        font 1.3rem/1.3rem var(--inter-font)
        color var(--text-color)
        &:focus
            + .box-form__input-label
                bottom 28px
                font-size .9rem
                line-height .9rem
        &:not(:placeholder-shown)
            + .box-form__input-label
                bottom 28px
                font-size .9rem
                line-height .9rem
    &__fieldset-error
        .box-form__input[type=password]
            color var(--error-color)
