.modal-full-width
    &__wrap
        width 100%
        height 100%
        background var(--modal-bg)
        position fixed
        top 0
        left 0
        z-index 9001
        display flex
        align-items center
        justify-content center
    &__popup
        width 340px
        min-height 257px
        background var(--box-bg)
        box-shadow 0 0 6px rgba(0,0,0,.14)
        border-radius 12px
        padding 40px 30px
        &-form
            width 100%
            min-height 177px
            display flex
            flex-direction column
            justify-content space-between
        &-title
            font-size 1.5rem
            line-height 2rem
            font-weight 500
            text-align center
            margin 0
