.chat
    &__wrapper
        width 100%
        height 100%
        display flex
        align-items stretch
        flex-direction column

    &__header
        width 100%
        height 55px
        padding 0 20px
        flex-shrink 0
        flex-grow 0
        &-inner
            padding 10px 0
            border-bottom 1px solid var(--layout-border)
            display flex
            align-items center
            justify-content space-between
        &-dots
            position relative
            width 25px
            height 25px
            display flex
            align-items center
            justify-content center
            flex-shrink 0
            &-ele
                font-size 2.2rem
                transform rotate(90deg)
                cursor pointer
                margin-left 14px

    &__body
        height calc(100% - 110px)
        overflow auto
        scrollbar-color rgba(0, 0, 0, .16) rgba(0, 0, 0, .04)
        scrollbar-width thin

    &__footer
        margin-top auto
        width 100%
        height 55px
        padding 0 20px
        flex-shrink 0
        flex-grow 0
        &-inner
            padding 10px 0
            border-top 1px solid var(--layout-border)
