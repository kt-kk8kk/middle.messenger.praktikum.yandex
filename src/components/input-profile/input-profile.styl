.profile
    &__fieldset
        &:last-child
            .profile__input-wrapper
                border-bottom-color transparent
    &__input-wrapper
        height 34px
        display block
        position relative
        border-bottom 1px solid var(--layout-border)
        &-last
            border-bottom-color transparent
    &__input-label
        position absolute
        bottom 10px
        left 0
        font-size 1.3rem
        line-height 1.3rem
        color var(--text-color)
        &-logout
            a
                color var(--logout-color)
    &__input-default
        position absolute
        bottom 10px
        right 0
        font-size 1.3rem
        line-height 1.3rem
        text-align right
        color var(--text-secondary-color)
    &__input
        display block
        border none
        background transparent
        width 100%
        height 33px
        padding 0 0 1px
        font 1.3rem/1.3rem var(--inter-font)
        text-align right
        color var(--text-color)
        position relative
