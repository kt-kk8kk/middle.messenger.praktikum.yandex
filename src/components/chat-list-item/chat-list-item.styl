.chat-list__item
    border-bottom 1px solid var(--layout-border)
    position relative
    &:first-child
        border-top 1px solid var(--layout-border)
    &-active
        &:before
            display block
            content ""
            width calc(100% + 20px)
            height calc(100% - 4px)
            position absolute
            top 2px
            left -10px
            background var(--chat-list-active-color)
        .chat-list__item-position
            position relative
    &-position
        display flex
        align-items stretch
        gap 0 10px
        padding 12px 0
    &-avatar
        width 47px
        height 47px
        border-radius 50%
        background var(--form-ele-bg)
        flex-shrink 0
        flex-grow 0
        img
            display block
            width 100%
            height 100%
            border-radius 50%
            object-fit cover
    &-info
        padding 0 10px 0 0
    &-name
        font-size 1.3rem
        line-height 100%
        font-weight 600
        margin 0 0 4px
    &-copy
        color var(--text-secondary-color)
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        overflow hidden
        &-you
            color var(--text-color)
    &-meta
        text-align right
        margin-left auto
        flex-shrink 0
        display flex
        flex-direction column
        justify-content space-between
    &-time
        font-size .9rem
        line-height 1.3rem
        color var(--text-secondary-color)
    &-badge
        display block
        width 20px
        height 20px
        border-radius 999px
        background var(--link-color)
        color var(--btn-color)
        text-align center
        font-size 1.1rem
        line-height 20px
